# 环境变量模板 - 复制为 .env.production 并填写真实值
# 生产环境配置
ENVIRONMENT=production
DEBUG=false

# 服务器配置
HOST=0.0.0.0
PORT=8000

# MySQL数据库配置 - 必须填写真实的数据库信息
DATABASE_URL=mysql+pymysql://username:password@localhost:3306/quantify?charset=utf8mb4

# Redis配置
REDIS_URL=redis://localhost:6379/0

# 安全配置 - 必须生成强密码
SECRET_KEY=your_secret_key_here

# 允许的主机
ALLOWED_HOSTS=localhost,127.0.0.1

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# 缓存配置
CACHE_DIR=cache

# Tushare配置 - 必须填写真实的Token
TUSHARE_TOKEN=your_tushare_token_here

# 数据更新配置
DATA_UPDATE_HOUR=18
DATA_UPDATE_MINUTE=0

# 最大K线天数
MAX_KLINE_DAYS=365

# 批处理配置
BATCH_SIZE=1000
TASK_TIMEOUT=300
MAX_CONCURRENT_TASKS=10

# 数据库连接池配置
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Redis连接池配置
REDIS_POOL_SIZE=10
REDIS_MAX_CONNECTIONS=100

# 限流配置
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# 健康检查配置
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# 备份配置
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# 请求配置
MAX_REQUEST_SIZE=10485760
REQUEST_TIMEOUT=30

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090

# 目录配置
DATA_DIR=data
LOGS_DIR=logs
CACHE_DIR=cache

# 宝塔面板配置
BT_PANEL=true
BT_SITE_PATH=/www/wwwroot/quantify

# 工作进程配置
WORKERS=4
WORKER_CLASS=uvicorn.workers.UvicornWorker
